<html lang="en">
<%- include("./partials/head.ejs") %>

    <body>
        <%- include("./partials/nav.ejs") %>

            <div class="create-blog content">
                <form id="update_data" action="/<%= collectionType %>/update/<%= animal._id %>" method="post">
                    <label for="title">Animal title:</label>
                    <input type="text" id="title" name="title" required value="<%= animal.title %>">
                    <label for="snippet">Animal snippet:</label>
                    <input type="text" id="snippet" name="snippet" value="<%= animal.snippet %>" required>
                    <label for="body">Animal body:</label>
                    <textarea id="body" name="body" required><%= animal.body %></textarea>
                    <input type="submit" value="Save">
                </form>
            </div>
            <%- include("./partials/footer.ejs") %>
    </body>

</html>